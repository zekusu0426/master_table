<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10">
    <h1>Employees Master Table</h1>
  </div>
  <div class="col-md-2" >
    <%= link_to '社員データ新規作成', new_user_path, remote: true %>
  </div>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>社員CD</th>
      <th>社員名称</th>
      <th>年齢</th>
      <th>電話番号1</th>
      <th>電話番号2</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>備考欄</th>
      <th colspan="3">編集フォーム</th>
    </tr>
  </thead>

  <tbody class="user-index">
    <%= render "index" %>
  </tbody>
</table>
<br>

<script type="text/javascript">
$(function(){
  $('.table tr').hover(
    function(){
      $(this).addClass('hv');
    },
    function(){
      $(this).removeClass('hv');
    }
  );
});
</script>

<div id="user-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <!-- jsの内容をここに出力する。 -->
</div>